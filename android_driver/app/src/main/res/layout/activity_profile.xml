<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.profile.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_main_app"
            android:visibility="gone"/>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txtFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:imeOptions="actionNext"
                    android:fontFamily="@font/comfortaa_bold"
                    android:paddingStart="@dimen/activity_vertical_margin"
                    android:paddingTop="30dp"
                    android:paddingEnd="@dimen/activity_vertical_margin"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="24sp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="match_parent"
                    android:layout_height="225dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:transitionName="picture"
                    app:srcCompat="@drawable/ic_user_placeholder" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/activity_vertical_margin"
                            android:paddingTop="@dimen/activity_vertical_margin"
                            android:paddingEnd="@dimen/activity_vertical_margin"
                            android:text="@string/first_name"
                            android:textSize="@dimen/_12ssp" />


                       <!-- <EditText
                            android:id="@+id/txtFirstName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:paddingStart="@dimen/activity_vertical_margin"
                            android:paddingTop="@dimen/_7sdp"
                            android:paddingEnd="@dimen/activity_vertical_margin"
                            android:paddingBottom="@dimen/activity_vertical_margin"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="@dimen/text_18" /> -->

                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/activity_vertical_margin"
                            android:paddingTop="@dimen/activity_vertical_margin"
                            android:paddingEnd="@dimen/activity_vertical_margin"
                            android:text="@string/last_name"
                            android:textSize="@dimen/_12ssp" />

                        <EditText
                            android:id="@+id/txtLastName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:imeOptions="actionNext"
                            android:inputType="text|textCapSentences"
                            android:maxLines="1"
                            android:paddingStart="@dimen/activity_vertical_margin"
                            android:paddingTop="@dimen/_7sdp"
                            android:paddingEnd="@dimen/activity_vertical_margin"
                            android:paddingBottom="@dimen/activity_vertical_margin"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="@dimen/text_18" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_7sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/comfortaa_bold"
                        android:paddingStart="@dimen/_7sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingEnd="@dimen/_7sdp"
                        android:text="mobile"
                        android:textAlignment="center"
                        android:textColor="#08f"
                        android:textSize="18sp" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtPhoneNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:padding="@dimen/_7sdp"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryText"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/qr_scan"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center|end"
                            android:layout_margin="@dimen/_5sdp"
                            android:contentDescription="@string/qr_scan"
                            app:srcCompat="@drawable/ic_qr_code" />

                    </FrameLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_7sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/comfortaa_bold"
                        android:paddingStart="@dimen/_7sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingEnd="@dimen/_7sdp"
                        android:text="email"
                        android:textAlignment="center"
                        android:textColor="#08f"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/txtEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:enabled="false"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:padding="@dimen/_7sdp"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="12sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_7sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/comfortaa_bold"
                        android:paddingStart="@dimen/_7sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingEnd="@dimen/_7sdp"
                        android:text="service"
                        android:textAlignment="center"
                        android:textColor="#08f"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/txtService"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:enabled="false"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="@dimen/_7sdp"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="12sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:orientation="vertical"
                    android:padding="@dimen/_7sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/comfortaa_bold"
                        android:paddingStart="@dimen/_7sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingEnd="@dimen/_7sdp"
                        android:text="car"
                        android:textAlignment="center"
                        android:textColor="#08f"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/txtModel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:enabled="false"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="@dimen/_7sdp"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="12sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/grey" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="80dp"
                    android:padding="@dimen/_7sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/comfortaa_bold"
                        android:paddingStart="@dimen/_7sdp"
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingEnd="@dimen/_7sdp"
                        android:text="registration"
                        android:textAlignment="center"
                        android:textColor="#08f"
                        android:textSize="18sp" />

                    <EditText
                        android:id="@+id/txtNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:enabled="false"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:padding="@dimen/_7sdp"
                        android:textAlignment="center"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="12sp" />

                </LinearLayout>

                <Button
                    android:id="@+id/btnSave"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_round_primary"
                    android:fontFamily="@font/comfortaa_bold"
                    android:text="save"
                    android:textAllCaps="false"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    tools:ignore="ButtonStyle" />

                <TextView
                    android:id="@+id/lblChangePassword"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:fontFamily="@font/comfortaa_bold"
                    android:text="@string/looking_to_change_password"
                    android:textAlignment="center"
                    android:layout_marginBottom="40dp"
                    android:textColor="@color/colorSecondaryText" />

            </LinearLayout>

        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>